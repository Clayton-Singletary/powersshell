regex exercise:

function net-info {
    $ipcon = ((ipconfig | findstr [0-9].\.)[0]).Split()[-1]
    $maskcon = ((ipconfig | findstr [0-9].\.)[1]).Split()[-1]
    $gatecon = ((ipconfig | findstr [0-9].\.)[2]).Split()[-1]

    Write-Host "IP: $ipcon"
    Write-Host "Subnet: $maskcon"
    Write-Host "Gateway: $gatecon"
 }
     
